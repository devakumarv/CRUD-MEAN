<body>
 
    <div class="container">
        <h1>Lab Eval 2 Form</h1>
        <br>
        <form name="myForm" method="post" action="/edit/<%- userdata._id %>" novalidate>
            <div class="main">
                <div class="left">
                    <div class="mail">
                        <h4>Name</h4>
                             <input type="text" placeholder="Name" name="name" id="nameInput" value="<%- userdata.name %>" required>
                    </div>
<br>
            <h4>Product ID</h4>
            <select name="productid" id="productid">
                <option value="PT001" <% if (userdata.productid === 'PT001') { %>selected<% } %>>PT001</option>
                <option value="PT002" <% if (userdata.productid === 'PT002') { %>selected<% } %>>PT002</option>
                <option value="PT003" <% if (userdata.productid === 'PT003') { %>selected<% } %>>PT003</option>
            </select>
                     <br/><br/>

                     <h4>Category</h4> 
                     <select name="category" id="category">
                         <option value="A" <% if (userdata.category === 'A') { %>selected<% } %>>A</option>
                         <option value="B" <% if (userdata.category === 'B') { %>selected<% } %>>B</option>
                         <option value="C" <% if (userdata.category === 'C') { %>selected<% } %>>C</option>
                         <option value="D" <% if (userdata.category === 'D') { %>selected<% } %>>D</option>
                     </select>
                          <br/><br/>

                    <div class="mail" >
                        <h4>Price (in ₹)</h4>
                        <input type="text" placeholder="Price" name="price" id="priceInput" value="<%- userdata.price %>" required>            
                    </div>
                    
                </div>    
                <div class="right">
                    <div class="mail" >
                        <h4>Discount (in %)</h4>
                        <input type="text" placeholder="Discount" name="discount" id="discountInput" value="<%- userdata.discount %>" required>               
                    </div>
                    <br/>
                   
                    <div class="mail">
                        <h4>Bonus (in ₹)</h4>
                     <input type="text" placeholder="Bonus" name="bonus" id="bonusInput" value="<%- userdata.bonus %>" required>
                    </div>
                    <br/>
                  
                    <div class="mail">
                        <h4>Billable Price (in ₹)</h4>
                        <input type="text" name="billableprice" id="billPrice" readonly>
                    </div>
                    <br/>
                </div>
               
            </div>   
            <div class="bottom">
                <div class="btn" >
                    <input type="submit" value="Update">
                    </div>
                </div>                  
        </form>
    </div>

    
    <script>
        function updateBillablePrice() {
            var price = parseFloat(document.getElementById('priceInput').value);
            var discount = parseFloat(document.getElementById('discountInput').value);
            var bonus = parseFloat(document.getElementById('bonusInput').value);

            var billablePrice = price - price * (discount / 100) - bonus;

            document.getElementById('billPrice').value = isNaN(billablePrice) ? '' : billablePrice.toFixed(2);
        }

        function submitForm() {
            updateBillablePrice();
            return true;
        }

        // Attach the update function to input events
        document.getElementById('priceInput').addEventListener('input', updateBillablePrice);
        document.getElementById('discountInput').addEventListener('input', updateBillablePrice);
        document.getElementById('bonusInput').addEventListener('input', updateBillablePrice);

        // Initial update
        updateBillablePrice();
    </script>
</body>
